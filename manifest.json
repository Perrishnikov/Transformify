{
  "name": "Image Transform",
  "description": "Salsify",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "declarativeContent",
    "tabs",
    "clipboardWrite",
    "clipboardRead"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/auto_48.png",
      "32": "images/auto_48.png",
      "48": "images/auto_48.png",
      "128": "images/auto_128.png"
    },
    "icons": {
      "16": "images/auto_48.png",
      "32": "images/auto_48.png",
      "48": "images/auto_48.png",
      "128": "images/auto_128.png"
    }
  }
}