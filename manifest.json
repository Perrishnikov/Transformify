{
  "name": "Salsify Image Transform",
  "description": "Grab any Salsify image URL and add a transformation string to it to change the image",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "declarativeContent",
    "tabs",
    "clipboardWrite",
    "clipboardRead"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/T_16.png",
      "32": "images/T_32.png",
      "48": "images/T_48.png",
      "128": "images/T_128.png"
    },
    "icons": {
      "16": "images/T_16.png",
      "32": "images/T_32.png",
      "48": "images/T_48.png",
      "128": "images/T_128.png"
    }
  }
}